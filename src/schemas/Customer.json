{
  "name": "Customer",
  "type": "object",
  "properties": {
    "full_name": {
      "type": "string",
      "description": "Nome completo do cliente"
    },
    "phone": {
      "type": "string",
      "description": "Telefone do cliente"
    },
    "city": {
      "type": "string",
      "description": "Cidade do cliente"
    },
    "avatar_url": {
      "type": "string",
      "description": "URL da foto de perfil"
    },
    "preferences": {
      "type": "object",
      "description": "Preferências do cliente (horários favoritos, etc)",
      "properties": {
        "favorite_shops": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "full_name",
    "phone"
  ]
}