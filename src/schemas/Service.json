{
  "name": "Service",
  "type": "object",
  "properties": {
    "barber_shop_id": {
      "type": "string",
      "description": "ID do salão que oferece este serviço"
    },
    "name": {
      "type": "string",
      "description": "Nome do serviço"
    },
    "description": {
      "type": "string",
      "description": "Descrição detalhada do serviço"
    },
    "price": {
      "type": "number",
      "description": "Preço do serviço"
    },
    "duration_minutes": {
      "type": "number",
      "description": "Duração em minutos"
    },
    "category": {
      "type": "string",
      "enum": [
        "corte",
        "barba",
        "coloracao",
        "hidratacao",
        "manicure",
        "pedicure",
        "massagem",
        "depilacao",
        "outros"
      ],
      "description": "Categoria do serviço"
    },
    "image_url": {
      "type": "string",
      "description": "URL da imagem do serviço"
    },
    "is_active": {
      "type": "boolean",
      "description": "Se o serviço está ativo",
      "default": true
    }
  },
  "required": [
    "barber_shop_id",
    "name",
    "price",
    "duration_minutes"
  ]
}